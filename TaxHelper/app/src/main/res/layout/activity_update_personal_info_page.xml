<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    tools:context="com.example.user.taxhelper.UpdatePersonalInfoPage">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Update It details"
        android:padding="10dp"
        android:textSize="28dp"
        android:textColor="#000000"
        android:background="#04b4ae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:background="#f2f2f2"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/upfullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textColor="#000000"
            android:textSize="20dp" />



        <EditText
            android:id="@+id/upbirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DOB (DD/MM/YYYY)"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/upusertypespinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <Spinner
            android:id="@+id/upgenderspinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <EditText
            android:id="@+id/uppan_no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pan No."
            android:textColor="#000000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/upphone_no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No."
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/UpdateButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="Update" />

    </LinearLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
