<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    tools:context="com.example.user.taxhelper.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:text="Register Here"
        android:padding="10dp"
        android:textSize="28dp"
        android:textColor="#000000"
        android:background="#04b4ae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/registerForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#f2f2f2"
        android:layout_margin="20dp"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp">

        <EditText
            android:id="@+id/fullName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/userName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/repassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/birthday2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DOB (DD/MM/YYYY)"
            android:textColor="#000000"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/usertypespinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:id="@+id/genderspinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <EditText
            android:id="@+id/pan_no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pan No."
            android:textColor="#000000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/phone_no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No."
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/registerButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="Register" />

    </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
