<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    tools:context="com.example.user.taxhelper.SettingsPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Settings"
            android:padding="10dp"
            android:textSize="28dp"
            android:textColor="#000000"
            android:background="#04b4ae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/updateItdetailstv"
            android:text="Update IT returns details"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/updatepersonalinfotv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#f2f2f2"
            android:padding="8dp"
            android:text="Update Personal Info"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/changePasswordtv"
            android:text="Change Password"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/logouttv"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="#f2f2f2"
            android:text="Logout"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
